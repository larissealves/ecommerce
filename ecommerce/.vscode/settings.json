{
  "eslint.workingDirectories": [
    {
      "mode": "auto" // Automatically detects working directories based on ESLint config files
    }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit",
  }
}
